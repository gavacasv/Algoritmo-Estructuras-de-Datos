#include <iostream> 
  
using namespace std; 
void heapSort(int arr[], int n) ; 
void mostrar(int arr[], int n) ;   
int main() 
{ 
    int arr[] = {12, 11, 13, 5, 6, 7}; 
    int n =6; 
    heapSort(arr, n); 
    cout << "arreglo ordenado \n"; 
    mostrar(arr, n); 
}
void mostrar(int arr[], int n) 
{ 
    for (int i=0; i<n; ++i) 
        cout << arr[i] << " "; 
    cout << "\n"; 
} 
void heapSort(int arr[], int n) 
{ 
    for (int i = n / 2 - 1; i >= 0; i--) 
    {
     int k = i; 
    int l = 2*i + 1; 
    int r = 2*i + 2; 
   while(k != i){
    if (l < n && arr[l] > arr[k]) 
        {k = l;} 
    if (r < n && arr[r] > arr[k]) 
      {  k = r; 
        swap(arr[i], arr[k]); }
    }
      swap(arr[0], arr[i]);
    }     
}
